    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "prisma": "^4.14.1",
    "next": "13.4.2",
    "nodemon": "^2.0.22",
    "postcss": "8.4.23",
    "qrcode": "^1.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
