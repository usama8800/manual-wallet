{
  "name": "manual-wallet",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run react:dev\" \"npm run electron:dev\"",
    "build": "concurrently \"npm run forge:package\" \"npm run react:build\"",
    "react:dev": "next dev",
    "react:build": "next build",
    "react:start": "next start",
    "react:lint": "next lint",
    "electron:dev": "nodemon",
    "electron:build": "tsc -p electron",
    "electron:start": "npm run electron:build && electron ./dist/main.js",
    "forge:start": "electron-forge start",
    "preforge:package": "npm run electron:build",
    "forge:package": "electron-forge package",
    "preforge:make": "npm run electron:build",
    "forge:make": "electron-forge make",
    "lint": "eslint ./src ./electron --fix",
    "zip": "tsx scripts/zip.ts",
    "random": "nodemon --config nodemon.random.json"
  },
  "dependencies": {
    "@prisma/client": "^4.14.1",
    "bitcoinjs-lib": "^6.1.1",
    "ecpair": "^2.1.0",
